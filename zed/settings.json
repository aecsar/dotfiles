// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
	"features": {
  "edit_prediction_provider": "copilot"
 },
 "base_keymap": "VSCode",
	"soft_wrap": "preferred_line_length",
	"edit_predictions": {
		"disabled_globs": [".env", ""]
	},
	"collaboration_panel": {
		"dock": "right"
	},
	"outline_panel": {
		"dock": "right"
	},
	"project_panel": {
		"indent_guides": {
			"show": "never"
		},
		"dock": "right",
		"indent_size": 20
	},
	// Override theme cursor selection color (tokyonight theme)
	// "experimental.theme_overrides": {
	// 	"players": [
	// 		{
	// 			"cursor": "#5ac1feff",
	// 			"background": "#5ac1feff",
	// 			"selection": "#6f7bb644"
	// 		}
	// 	]
	// },
	"vim_mode": true,
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"indent_guides": {
		"enabled": true,
		"line_width": 1,
		"active_line_width": 1,
		"coloring": "disabled"
		// "background_coloring": "indent_aware"
	},
	// "wrap_guides": [100],
	"preferred_line_length": 120,
	"tabs": {
		"git_status": true,
		"file_icons": true
	},
	"terminal": {
		"dock": "bottom",
  "font_family": "JetBrainsMono Nerd Font",
		"font_size": 14,
		"font_features": {
			"calt": true
		}
	},
	"buffer_font_family": "JetBrainsMono Nerd Font",
	"hard_tabs": true,
	"tab_size": 2,
	"autosave": "on_focus_change",
	"ui_font_size": 16,
	"show_whitespaces": "boundary",
	"buffer_font_features": {
		"calt": true
	},
	"buffer_font_size": 15.5,
	"theme": {
		"mode": "system",
		"light": "Tokyo Night",
		"dark": "Tokyo Night"
	}
}
